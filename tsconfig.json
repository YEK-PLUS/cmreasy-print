{
  "compilerOptions": {
    "jsx": "react",
    "rootDir": "src",
    "outDir": "dist",
    "target": "ESNext",
    "module": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "resolveJsonModule": true
  }
}